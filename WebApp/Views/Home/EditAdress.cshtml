@model WebApp.Models.Adress
@{
    ViewBag.Title = "Редактирование адреса";
}
<h2>Редактирование адреса</h2>

<form asp-action="EditAdress" asp-controller="Home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="City" class="control-label">Город</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Street" class="control-label">Улица</label>
        <input type="text" asp-for="Street" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="House" class="control-label">№ дома</label>
        <input type="number" asp-for="House" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Corpus" class="control-label">№ корпуса</label>
        <input type="text" asp-for="Corpus" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Entrance" class="control-label">Номер подезда в доме</label>
        <input type="number" asp-for="Entrance" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ContractNumb" class="control-label">Номер договора</label>
        <input type="text" asp-for="ContractNumb" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FlatCount" class="control-label">Общее количество квартир в поъезде</label>
        <input type="number" asp-for="FlatCount" class="form-control" />
    </div>    <div class="form-group">
        <label asp-for="DoorsCount" class="control-label">Общее количество дверей в поъезде</label>
        <input type="number" asp-for="DoorsCount" class="form-control" />
    </div>
              <div class="form-group">
                  <label asp-for="DomofonSystem.DomofonSystemType" class="control-label">Тип домофонной системы</label>
                  <br />
                  @Html.DropDownList("domofonsystemid", ViewBag.AllDomofonSystems as SelectList, "Выберите Тип домофонной системы")
              </div>
              <div class="form-group">
                  <label asp-for="DomofonKey.DomofonKeyType" class="control-label">Тип ключа</label>
                  <br />
                  @Html.DropDownList("domofonkeyid", ViewBag.AllDomofonKeys as SelectList, "Выберите Тип ключа")
              </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-danger" />
    </div>
</form>